@page "/Index"
@model Nordblick.Bookshop.WebShop.Pages.Books.BooksIndexModel
@{
    ViewData["Title"] = "BooksIndex";
}


    <div class="container">
        <h1>Bücherliste</h1>

        <h2>@Model.currentBook.Title</h2>
        <div class="row">
            <div class="col">
                <table id="myTable" class="table table-dark">
                    <thead>
                        <tr>
                            <th style="display:none;">
                                @Html.DisplayNameFor(model => model.currentBook.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.currentBook.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.currentBook.PageCount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.currentBook.Price)
                            </th>
                            <th>Aktionen</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.allBooks)
                        {
                        <tr>
                            <td style="display:none;">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PageCount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit fa-lg">edit</i></a>
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info fa-lg">details</i></a>
                                <a asp-action="Remove" asp-route-id="@item.Id"><i class="far fa-trash-alt fa-lg">kill</i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>       
     </div> 